---
const { title, href, imgSrc, stack, description } = Astro.props;
---

<div class="project-div">
  <div id="img-div">
    <img src="/images/portfolio/corner.png" id="corner-img" />
    <img src={imgSrc} id="project-img" />
  </div>
  <div class="project-text">
    <h3>{title}</h3>
    <span>{stack}</span>
    <a href={href} target="_blank">{href}</a>
    <p>
      {description}
    </p>
  </div>
</div>

<style>
  .project-div {
    width: 100%;
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1rem;
    text-align: left;
    font-family:
      Fira Code,
      serif;
  }

  span {
    font-style: italic;
  }

  a {
    display: block;
  }

  /* img */

  #img-div {
    aspect-ratio: 5/3;
    width: 20rem;
    border: 1px solid red;
    position: relative;
  }

  #corner-img {
    position: absolute;
    width: 5rem;
    top: 0;
    left: 0;
    z-index: 1000;
  }

  #project-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }
</style>
